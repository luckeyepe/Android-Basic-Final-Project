<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="395dp"
        android:layout_height="157dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgv_studentRowsProfileThumbnail"
                android:layout_width="102dp"
                android:layout_height="111dp"
                android:layout_marginStart="64dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/default_avata" />

            <TextView
                android:id="@+id/txt_studentRowIDNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:text="@string/id_number_text"
                android:textColor="@color/grey_100"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imgv_studentRowsProfileThumbnail"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_studentRowFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:text="@string/student_name_text"
                android:textColor="@color/grey_100"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/imgv_studentRowsProfileThumbnail"
                app:layout_constraintTop_toBottomOf="@+id/txt_studentRowIDNum" />

            <TextView
                android:id="@+id/txt_studentRowCourseYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:text="@string/course_year_text"
                android:textColor="@color/grey_100"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/imgv_studentRowsProfileThumbnail"
                app:layout_constraintTop_toBottomOf="@+id/txt_studentRowFullName" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>